{
    "name": "dockerbackup/cli",
    "description": "Docker Backup & Restore CLI Tool",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "symfony/console": "^6.4",
        "symfony/process": "^6.4",
        "symfony/dotenv": "^6.4",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "php-cs-fixer/shim": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "DockerBackup\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DockerBackup\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/console"
    ],
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=5",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@cs-fix",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}